function multiquery() 
{
  URL="http://monitoring-receiver.prod.internal:5000/query/"
  SQL_QUERY="$1"
  BODY='{"sql":"'"$SQL_QUERY"'","orgIds":[],"clusterNames":["orgs01","orgs02","orgs03","orgs04","orgsDemo","orgsPoc"],"format":"json"}'
  curl -X POST "$URL" \
    -H 'Content-Type: application/json' \
    -d "$BODY" \
    | jq
}

